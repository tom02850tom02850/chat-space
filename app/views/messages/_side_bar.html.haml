.side-bar
  .side-bar_header
    = current_user.name
    .side-bar_header_box
      %p.side-bar_header_box_user_name
      %ul.side-bar_header_box_menu
        %li.side-bar_header_box_menu_newgroup
          = link_to new_group_path do
            = icon('fas', 'edit', class: 'side-bar_header_box_menu_newgroup-btn')
        %li.side-bar_header_box_menu_edituser
          = link_to edit_user_path(current_user) do
            = icon('fas', 'cog', class: 'side-bar_header_box_menu_edituser-btn')
  .groups
    - current_user.groups.each do |group|
      .groups_group
        = link_to group_messages_path(group) do
          .groups_group_group_name
            = group.name
          .groups_group_latest-message
            = group.show_last_message