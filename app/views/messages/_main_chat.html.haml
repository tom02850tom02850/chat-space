.main-chat
  .main-chat_main-header
    .main-chat_main-header_left-box
      %h2.main-chat_main-header_left-box_current-group
        = @group.name
      %ul.main-chat_main-header_left-box_member-list
        %li.main-chat_main-header_left-box_member-list_member
          Menber:
          - @group.users.each do |user|
            =user.name
    = link_to "/groups/#{@group.id}/edit" do
      .main-chat_main-header_edit-btn
        Edit
  .main-chat_messages
    = render @messages
  .main-chat_form
    %form.main-chat_form_new_message{"id":"newmessage","enctype": "multipart/form-data","action": "/groups/#{@group.id}/messages","accept-charset": "UTF-8","method":"post" }
      %input{name:"utf8",type:"hidden", value:"#"}
      %input{type:"hidden",name:"authenticity_token",value:"grtQe5ZZ1xFx0z8VW5tYbRqih/IHtikInYT8XsD2FU3rn8N+/puhPvG3Si4PoaOuBoQjK36UvG+zWkGalWoExA=="}
      .main-chat_form_new_message_input-box
        %input.main-chat_form_new_message_input-box_text{placeholder:"type a message",type:"text",name:"message[content]",id:"message_content"}
        %label.main-chat_form_new_message_input-box_image{for:"message_image",}
          %i.main-chat_form_new_message_input-box_image
            = icon('far', 'images', class: 'icon')
          %input.main-chat_form_new_message_input-box_image_file{type:"file",name:"message[image]",id:"message_image"}
      %input{type:"submit",name:"commit", value:"Send",class:"submit-btn",data_disable_with:"Send"}
